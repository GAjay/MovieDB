<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="@dimen/d_smallest">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:clipToPadding="false"
        android:elevation="2dp"
        android:padding="@dimen/d_small">

        <ImageView
            android:id="@+id/ivPostergrid"
            android:layout_width="@dimen/textmargin_top"
            android:layout_height="@dimen/textmargin_top"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/tvNameGrid"
            android:layout_width="@dimen/textmargin_top"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPostergrid"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="@dimen/d_smallest"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textSize="@dimen/d_normal"
            tools:text="Offical Video" />

        <TextView
            android:id="@+id/tvGridVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvNameGrid"
            android:drawableLeft="@drawable/ic_star"
            android:drawablePadding="5dp"
            android:layout_marginTop="@dimen/d_smallest"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand"
            android:maxLines="1"
            android:textSize="@dimen/d_normal"
            tools:text="Offical Video" />

        <TextView
            android:id="@+id/tvGridyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvNameGrid"
            android:layout_marginTop="@dimen/d_smallest"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:drawableLeft="@drawable/ic_weekly_calendar"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:textSize="@dimen/d_normal"
            tools:text="Offical Video" />

    </RelativeLayout>

</RelativeLayout>